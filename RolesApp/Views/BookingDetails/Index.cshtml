                <div class="row">
                    <div style="width: 167px;">
                        <h4><strong>Customer Name</strong> </h4>
                    </div>
                    <div style="width: 88%;">
                        <div>
                            <input v-model="opItem.customerName" style="width: 100%" class="input-field-form " type="text" placeholder="Введите номер" />
